<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0"> 
  <display-name>Oracle HBase</display-name>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<jsp-file>/pages/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>home</servlet-name>
  	<url-pattern></url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>home</servlet-name>
  	<servlet-class>com.oracle_hbase.login.MainPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>searchword</servlet-name>
    <servlet-class>com.oracle_hbase.services.Search</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>searchword</servlet-name>
      <url-pattern>/main/searchword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>loadfile</servlet-name>
    <servlet-class>com.oracle_hbase.services.Load</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>loadfile</servlet-name>
      <url-pattern>/main/loadfile</url-pattern>
  </servlet-mapping>
 <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.oracle_hbase.login.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>logout</servlet-name>
      <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
        <servlet-name>mainUser</servlet-name>
        <jsp-file>/pages/main.jsp</jsp-file>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>mainUser</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
   <servlet>
   	<servlet-name>UserHBaseDao</servlet-name>
   	<servlet-class>com.oracle_hbase.dao.UserHBaseDao</servlet-class>
   </servlet>
   <servlet>
   	<servlet-name>Load</servlet-name>
   	<jsp-file>/pages/load.jsp</jsp-file>
   </servlet>
 	<servlet>
   	<servlet-name>Delete</servlet-name>
   	<jsp-file>/pages/delete.jsp</jsp-file>
   </servlet>
    <servlet-mapping>
    	<servlet-name>UserHBaseDao</servlet-name>
    	<url-pattern>/UserHBaseDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>Load</servlet-name>
    	<url-pattern>/main/load</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
    	<servlet-name>Delete</servlet-name>
    	<url-pattern>/main/delete</url-pattern>
    </servlet-mapping>
       <servlet>
   	<servlet-name>Search</servlet-name>
   	<jsp-file>/pages/search.jsp</jsp-file>
   </servlet>
   <servlet>
       	<servlet-name>deletefile</servlet-name>
       	<servlet-class>com.oracle_hbase.services.Delete</servlet-class>
   </servlet>
   <servlet-mapping>
    	<servlet-name>Search</servlet-name>
    	<url-pattern>/main/search</url-pattern>
    </servlet-mapping>
   <servlet-mapping>
   	<servlet-name>deletefile</servlet-name>
   	<url-pattern>/main/deletefile</url-pattern>
   </servlet-mapping>
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<filter-class>com.oracle_hbase.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/user/*</url-pattern>
  </filter-mapping>
 
</web-app>